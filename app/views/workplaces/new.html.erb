<div class="container text-center">
<h1 class="pt-3 pb-5">Create a Workplace</h1>

<%= simple_form_for @workplace do |f| %>
  <%= f.input :name, placeholder: 'Enter the name of Workplace' %>
  <%= f.input :description, placeholder: 'Describe your Workplace' %>
  <%= f.input :total_places, placeholder: 'Enter the maximum capacity ' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <button type="button" class="btn btn-outline-success"><%= f.button :submit %> </button>
<% end %>
</div><br><br>

<div class="container text-center">
  <h2 class="pt-3 pb-5">Import a Workplace</h2>
  <%= form_tag import_workplaces_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import CSV" %>
  <% end %>
</div>
