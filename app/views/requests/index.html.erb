<div class="container text-center">
  <h1>Waiting list</h1>
  <p>Here is the order in which the next requests will be accepted</p>
</div>
<div class="container">
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Position</th>
          <th scope="col">Name</th>
          <% if current_user && current_user.admin? %>
          <th scope="col">Action</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @requests.each_with_index do |r, index| %>
        <tr>
          <td> <%= index + 1 %></td>
          <td> <%= link_to r.name.capitalize, request_path(r) %></td>
          <% if current_user && current_user.admin? %>
          <td> <%= link_to "Accept!", accept_url(r.confirm_token), class: 'btn btn-success' %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
